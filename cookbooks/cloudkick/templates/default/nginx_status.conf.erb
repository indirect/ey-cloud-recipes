# Used for collecting Nginx metrics in CloudKick. This location
# block is only accessible from the server itself, which is the
# context the CloudKick plugins execute from.

server {
  listen 82;
  server_name 127.0.0.1;

  location /nginx_status {
    stub_status on;
    access_log off;
    allow 127.0.0.1;
    deny all;
  }
}
